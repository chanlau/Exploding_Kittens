<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exploding Kittens!"
            android:textAlignment="center"
            android:textColor="#E91E63"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Play" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="End Turn" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Trade 2" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Trade 3" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Trade 5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Enter" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/playing_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/player2_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Player 2" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:maxHeight="120dip"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/cardback"
                    tools:srcCompat="@drawable/cardback" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/middle_of_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Player 3" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:maxHeight="150dip"
                    android:minHeight="130dip"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/cardback"
                    tools:srcCompat="@drawable/cardback" />

                <LinearLayout
                    android:id="@+id/cardpile_and_deck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/customborder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="47dip"
                        android:layout_marginRight ="47dip"
                        android:layout_marginTop="20dip"
                        android:layout_marginBottom="20dip"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="#FFFFFF"
                        android:maxHeight="120dip"
                        android:minHeight="100dip"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cardpile"
                        tools:srcCompat="@drawable/cardpile" />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight ="47dip"
                        android:layout_marginLeft="47dip"
                        android:layout_marginTop="20dip"
                        android:layout_marginBottom="20dip"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="#FFFFFF"
                        android:maxHeight="120dip"
                        android:minHeight="100dip"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/cardback"
                        tools:srcCompat="@drawable/cardback" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:maxHeight="150dip"
                    android:minHeight="130dip"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/cardback"
                    tools:src="@drawable/cardback" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Player 4" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/your_hand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button13"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="<" />

                <ImageButton
                    android:id="@+id/button11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/explodingkittencard"
                    android:text="EXPLODE!" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shufflecard"
                    android:text="Shuffle" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skipcard"
                    android:text="Skip" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/favorcard"
                    android:text="Attack" />

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:minHeight="100dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skipcard"
                    android:text="Skip" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text=">" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

